<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
            margin: 20px;
            line-height: 1.6;
        }
        .report-content {
            margin-top: 100px; /* Increased top margin to avoid overlap */
        }
        h1 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }
        h2 {
            font-size: 18px;
            margin-bottom: 15px;
        }
        p {
            font-size: 14px;
            margin-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table,
        th,
        td {
            border: 1px solid #ddd;
        }
        th,
        td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f8f8f8;
        }
        .remarks {
            page-break-inside: avoid;
        }
    </style>
</head>
<body>
    <div class="report-content">
        <h2 class="heading">General Information</h2>
        <p>Site: <%= reportData?.site %></p>
        <p>Status: <%= reportData?.status %></p>
        <p>Initiator: <%= reportData?.initiator_name %></p>
        <p>Date of Initiation: <%= reportData?.date_of_initiation %></p>
        <p>Description: <%= reportData?.description %></p>
        <hr />

        <h2 class="heading">Differential Pressure Records</h2>
        <% reportData.DifferentialPressureRecords.forEach(record => { %>
        <div class="listItem">
            <p>Unique Id: <%= record?.unique_id %></p>
            <p>Time: <%= record?.time %></p>
            <p>Differential Pressure: <%= record?.differential_pressure %></p>
            <p>Remark: <%= record?.remarks %></p>
            <p>Checked By: <%= record?.checked_by %></p>
            <p>
                Supporting Documents:
                <a href="<%= record?.supporting_docs %>" target="_blank">View File</a>
            </p>
        </div>
        <hr />
        <% }) %>

        <div class="remarks">
            <h2 class="heading">Initiator Remarks</h2>
            <p>Initiator: <%= reportData?.initiator_name %></p>
            <p>Comment: <%= reportData?.initiatorComment %></p>
            <p>
                Attachment:
                <a href="<%= reportData?.initiatorAttachment %>" target="_blank">View File</a>
            </p>
            <p>Date of Initiation: <%= reportData?.date_of_initiation %></p>
        </div>
        <hr />

        <div class="remarks">
            <h2 class="heading">Reviewer Remarks</h2>
            <p>Reviewer: <%= reportData?.reviewer?.name %></p>
            <p>Comment: <%= reportData?.reviewerComment %></p>
            <p>
                Attachment:
                <a href="<%= reportData?.reviewerAttachment %>" target="_blank">View File</a>
            </p>
            <p>Date of Review: <%= reportData?.date_of_review %></p>
        </div>
        <hr />

        <div class="remarks">
            <h2 class="heading">Approver Remarks</h2>
            <p>Approver: <%= reportData?.approver?.name %></p>
            <p>Comment: <%= reportData?.approverComment %></p>
            <p>
                Attachment:
                <a href="<%= reportData?.approverAttachment %>" target="_blank">View File</a>
            </p>
            <p>Date of Approval: <%= reportData?.date_of_approval %></p>
        </div>
        <hr />
    </div>
</body>
</html>
